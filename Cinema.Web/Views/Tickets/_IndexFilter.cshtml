@model List<Cinema.Domain.DomainModels.Ticket>



<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new Ticket</a>

    </div>
    <div class="container">
        <h1 class="font-weight-normal">Available tickets</h1>
    </div>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @: <div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width:18rem; height:15rem;">
                    <div class="card-body">
                        <h3 class="card-title">@item.Title</h3>
                        <p class="card-text">Date: @item.Date</p>
                        <h6>Price: @item.TicketPrice</h6>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Tickets" asp-action="AddTicketToCard" asp-route-id="@item.Id" class="btn btn-primary">Add to Card</a>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>


                </div>

            </div>

        }
</div>
</div>

